<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="反馈类型："
            android:textColor="@color/gray_333333"
            android:textSize="18sp" />

        <org.angmarch.views.NiceSpinner
            android:id="@+id/ns_feedback"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_feedback_advice"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="10dp"
        android:gravity="top"
        android:hint="@string/feedback_advice_hint"
        android:background="@drawable/bg_white_radius_5" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_feedback_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/gray_cdcdcd"
            android:textSize="18sp"
            android:background="@drawable/bg_blue_radius_5" />

        <ImageView
            android:id="@+id/iv_feedback_mask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="visible"
            android:alpha="0.4"
            android:background="@drawable/bg_white_radius_5" />

    </RelativeLayout>



</LinearLayout>