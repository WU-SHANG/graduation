<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">


    <LinearLayout
        android:id="@+id/ll_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_white_radius_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="@drawable/selector_tv_top_press"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/ll_top_content"
        android:background="@drawable/bg_white_radius_10"
        android:foreground="@drawable/selector_choose_dialog_btn_press"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/gray_666666"
        android:textSize="18sp" />

</RelativeLayout>